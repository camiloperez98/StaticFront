  <script>
    const expresionIva = /^\d+(\.\d{1,2})?$/
    const expresionPrecio = /^\d+(\.\d{1,2})?$/
    const expresionCantidad = /^\d+$/

    const form = document.querySelector('#validar-crear');


    form.addEventListener('submit', e => {
      e.preventDefault();

      const cantidad = e.target.cantidad.value;
      const precio = e.target.precio.value;
      const iva = e.target.iva.value;

      try {
        if (cantidad == '' || precio == '' || iva == '') {
          throw ' No se admiten campos vacíos';
        }

        if (!expresionIva.test(iva)) {
          throw ' IVA no válido';

        }
        if (!expresionPrecio.test(precio)) {
          throw ' Precio no válido';

        }
        if (!expresionCantidad.test(cantidad)) {
          throw ' Cantidad no válida';

        }

        Swal.fire({
          icon: 'success',
          title: 'Compra creada éxitosamente'
        }).then(result => {
          if (result.isConfirmed) {
            window.location.href = '/compras';
          }
        });


      } catch (e) {
        Swal.fire({
          icon: 'error',
          title: 'ERROR',
          text: e,
        })

      }
    })


    const salir = document.querySelector('#salir');

    salir.addEventListener('click', e => {
      e.preventDefault()


      Swal.fire({
        title: '¿Estás seguro de cerrar sesión?',
        text: "",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Si'
      }).then((result) => {
        if (result.isConfirmed) {
          Swal.fire(
            '',
            'Ha cerrado sesión',
            'success',
          );
          window.location.href = '/';
        }

      });
    })
  </script>


